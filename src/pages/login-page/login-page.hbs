{{#> FormDialog }}
    <form class="login-page">
        <div class="login-page__header">
            {{> PageTitle title="Вход" }}
        </div>
        <div class="login-page__main">
            {{> Textbox label="Логин" placeholder="Логин" name="login" }}
            {{> Textbox label="Пароль" placeholder="Пароль" name="password" type="password" }}
        </div>
        <div class="login-page__footer">
            {{> Button text="Войти" page="/" }}
            {{> Link text="Зарегистрироваться" page="/sign-in" }}
        </div>
    </form>
{{/ FormDialog }}
